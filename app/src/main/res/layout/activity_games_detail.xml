            android:layout_height="wrap_content"
            android:id="@+id/activity_games_detail_viewers_txt"
            app:layout_constraintTop_toBottomOf="@+id/textView3" android:textSize="18sp"
            app:layout_constraintStart_toStartOf="@+id/textView3" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"/>
    <TextView
            android:text="@string/label_channels"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView5" android:textSize="12sp"
            android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginRight="8dp"
            android:textColor="@color/colorPrimary"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintStart_toEndOf="@+id/textView3"
            android:layout_marginStart="8dp" android:layout_marginLeft="8dp" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/activity_games_detail_title_txt"
            app:layout_constraintVertical_bias="0.0" app:layout_constraintHorizontal_bias="0.0"/>
    <TextView
            android:text="90000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/activity_games_detail_channels_txt"
            app:layout_constraintTop_toBottomOf="@+id/textView5" android:textSize="18sp"
